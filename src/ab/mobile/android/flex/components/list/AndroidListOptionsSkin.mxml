<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		width="100%" height="100%">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ab.mobile.android.flex.components.list.AndroidListOptions")]
	</fx:Metadata>
	
	<!-- SkinParts
	name=optionsList, type=spark.components.List, required=true
	name=optionsTitle, type=spark.components.Label, required=false
	-->
	
	<s:Rect width="100%" height="100%" radiusX="8" radiusY="8">
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Rect>
	
	<s:VGroup gap="0" top="2" left="2" right="2" bottom="2">
		<s:Group width="100%">
			<s:Rect width="100%" height="100%" topLeftRadiusX="8" topLeftRadiusY="8" topRightRadiusX="8" topRightRadiusY="8">
				<s:fill>
					<s:SolidColor color="#333333" />
				</s:fill>
			</s:Rect>
			<s:HGroup gap="20" 
					  paddingTop="20" paddingLeft="20" paddingBottom="20" paddingRight="20">
				<!--<s:BitmapImage id="optionsIcon" />-->
				<s:Label id="optionsTitle" width="100%" color="#FFFFFF" />
			</s:HGroup>
		</s:Group>
		
		<s:List id="optionsList" width="100%" height="100%" borderVisible="false" />
	</s:VGroup>
	
</s:Skin>
